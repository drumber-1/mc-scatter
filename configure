#!/bin/bash

function show_help {
	echo "Usage: $0 [OPTIONS] PROBLEM"
	echo
	echo "Options"
	echo "    -h            display this help and exit"
	echo
	echo "TODO: Put more detailed instructions here"
}

export SCATTER_MODE=""

while getopts "h" opt; do
	case "$opt" in
	h)
		show_help
		exit 0
		;;
	\?)
        show_help
        exit 1
		;;
    esac
done


shift $((OPTIND-1))
[ "$1" = "--" ] && shift

if [ $# -ne "1" ]; then
	echo "Illegal number of parameters"
	show_help
	exit 1
fi

ln -sf ../problems/$1/problem.cpp ./src/problem.cpp
make clean

echo "Configured for $1 problem"
